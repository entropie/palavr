.cat
  .main
    .add
      .info{:title => "#{@cat.phreads.size} Stories"}= @cat.phreads.size
    .img
      %img{:src => "/img/nopic.png", :height => 96, :width => 96}
    .title
      %a{:href => BoardController.r(@cat.url)}= @cat.title
    %p.desc
      = @cat.description
    .sec{:class => :modlist}
      %em Moderators:
      = @cat.mods.map(&:profile_link).join(", ")      
  
