- unless request.xhr?
  %h1
    .pic
      %img{:src => @category.pic}
    = @category.title

  .backlink
    &larr;
    %a{:class => "blink awesome small silver", :href => BoardController.r} Back to Catgories
    &crarr;
    %a{:class => "awesome small silver blink", :href => BoardController.r(:create, :category => @category.id)} Create
#threads
  - @threads.each do |thread|
    = render_file "view/thread/_thread.haml", :phread => thread

  = render_file "view/c/paginate.haml", :category => @category, :paginated => @paginated
